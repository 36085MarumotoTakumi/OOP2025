<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="389*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Margin="10,0,328,0" VerticalAlignment="Center">
            <TextBox x:Name="NameTextBox" Height="30" Width="300" HorizontalAlignment="Left" Margin="0,5"/>
            <TextBox x:Name="PhoneTextBox" Height="30" Width="300" HorizontalAlignment="Left" Margin="0,5"/>
            <TextBox x:Name="AddressTextBox" Height="30" Width="300" HorizontalAlignment="Left" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="画像" x:Name="PictureButton" Click="PictureButton_Click" Height="30" Width="80" Margin="5"/>
                <Button Content="更新" x:Name="UpdateButton" Click="UpdateButton_Click" Height="30" Width="80" Margin="5"/>
                <Button Content="保存" x:Name="SaveButton" Click="SaveButton_Click" Height="30" Width="80" Margin="5"/>
                <Button Content="取得" x:Name="ReadButton" Click="ReadButton_Click" Height="30" Width="80" Margin="5"/>
                <Button Content="削除" x:Name="DeleteButton" Click="DeleteButton_Click" Height="30" Width="80" Margin="5"/>
            </StackPanel>


        </StackPanel>
        <TextBox x:Name="SearchTextBox"  Grid.Row="0" FontSize="16" TextChanged="SearchTextBox_TextChanged" Height="30" Width="323" Margin="0,6,0,144" HorizontalAlignment="Right"/>
        <!-- リストビューエリア -->
        <ListView x:Name="PersonListView" Grid.Row="0" Height="250" SelectionChanged="PersonListView_SelectionChanged" Margin="455,3,10,105" Grid.RowSpan="3" Grid.ColumnSpan="3">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="210">
                        <TextBlock Text="{Binding Name}" FontSize="16"/>
                        <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                        <TextBlock Text="{Binding Address}" Foreground="Red"/>
                        <Image Source="{Binding Picture}" Height="50" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
