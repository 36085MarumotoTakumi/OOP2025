                    HorizontalAlignment="Right">
            <Button x:Name="cancelButton" Content="キャンセル" Width="75" Margin="5" Click="cancelButton_Click"/>
            <Button x:Name="okButton" Content="OK" Width="75" Margin="5" Click="okButton_Click"/>
        </StackPanel>
