        <!--<TextBox DockPanel.Dock="Top"
                Text="ウィンドウの上に張り付くテキストボックス"
                TextWrapping="Wrap" Margin="4" Padding="2"/>
        <TextBox DockPanel.Dock="Bottom"
            TextWrapping="Wrap" Margin="4" Padding="2"/>
        <Button Content="ウィンドウの下に張り付くテキストボックス" Margin="4" Padding="2"/>
        <TextBox Text="真ん中の領域にいっぱいに広がるテキスト ボックス"
                 TextWrapping="Wrap" Margin="4" Padding="2"/>-->

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "Auto"/>
                <ColumnDefinition Width = "*"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" Text="項目"/>
            <TextBlock Grid.Column="2" Text="設定値"/>
            <Label Grid.Row="1" Content="ON/OFF(_0)"/>
            <CheckBox x:Name="checkBox" Grid.Row="1" Grid.Column="1" Content="チェックしたらON"
                      VerticalAlignment="Center"/>
            <TextBlock x:Name="checkBoxTextBlock" Grid.Row="1" Grid.Column="2"
                       VerticalAlignment="Center"/>
            <Label Grid.Row="2" Content="色(_C)"/>
            <StackPanel Grid.Row="2" Grid.Column="1">
                <RadioButton x:Name="redRadioButton" GroupName="Color" Content="赤"/>
                <RadioButton x:Name="yellowRadioButton" GroupName="Color" Content="黄"/>
                <RadioButton x:Name="blueRadioButton" GroupName="Color" Content="青"/>
            </StackPanel>
            <TextBlock x:Name="colorText" Grid.Row="2" Grid.Column="2"/>
            <Label Grid.Row="3" Content="季節(_S)"/>
            <ComboBox x:Name="seasonComboBox" Grid.Row="3" Grid.Column="1">
                <ComboBoxItem Content="春"/>
                <ComboBoxItem Content="夏"/>
                <ComboBoxItem Content="秋"/>
                <ComboBoxItem Content="冬">
            </ComboBox>
            <TextBlock x:Name="seasonTextBlock" Grid.Row="3" Grid.Column="2">
        </Grid>


    </DockPanel>
</Window>
