<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Textual Weather" Height="650" Width="550"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        FontFamily="Segoe UI Semibold">

    <Window.Resources>
        <SolidColorBrush x:Key="MdSysColorBackground">#1C1B1F</SolidColorBrush>
        <SolidColorBrush x:Key="MdSysColorSurface">#25232A</SolidColorBrush>
        <SolidColorBrush x:Key="MdSysColorPrimaryContainer">#4F378B</SolidColorBrush>
        <SolidColorBrush x:Key="MdSysColorOnPrimaryContainer">#EADDFF</SolidColorBrush>
        <SolidColorBrush x:Key="MdSysColorOnSurface">#E6E1E5</SolidColorBrush>
        <SolidColorBrush x:Key="MdSysColorOutline">#938F99</SolidColorBrush>
    </Window.Resources>

    <Border Background="{StaticResource MdSysColorBackground}" 
            CornerRadius="24" 
            BorderBrush="{StaticResource MdSysColorOutline}" 
            BorderThickness="0.5"
            Padding="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="TenkiApp" 
                               FontSize="14" 
                               Foreground="{StaticResource MdSysColorOutline}"/>

                    <ComboBox x:Name="CboLocations"
                              SelectionChanged="CboLocations_SelectionChanged"
                              DisplayMemberPath="Name"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="{StaticResource MdSysColorBackground}"
                              Background="Transparent"
                              BorderThickness="0"
                              Cursor="Hand"
                              HorizontalAlignment="Left">
                        <ComboBox.Resources>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="{StaticResource MdSysColorSurface}"/>
                                <Setter Property="Foreground" Value="{StaticResource MdSysColorOnSurface}"/>
                            </Style>
                        </ComboBox.Resources>
                    </ComboBox>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="✕" 
                        Click="CloseButton_Click"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{StaticResource MdSysColorOnSurface}"
                        FontSize="16"
                        Cursor="Hand"/>
            </Grid>

            <Border Grid.Row="1" 
                    Background="{StaticResource MdSysColorPrimaryContainer}" 
                    CornerRadius="16" 
                    Padding="20" 
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="TxtCityLabel" 
                                   Text="Loading..." 
                                   Foreground="{StaticResource MdSysColorOnPrimaryContainer}" 
                                   Opacity="0.8" FontSize="14"/>
                        <TextBlock x:Name="TxtCurrentWeather" 
                                   Text="..." 
                                   Foreground="{StaticResource MdSysColorOnPrimaryContainer}" 
                                   FontSize="20" Margin="0,5,0,0"/>
                    </StackPanel>

                    <TextBlock x:Name="TxtCurrentTemp" 
                               Grid.Column="1" 
                               Text="--°C" 
                               Foreground="{StaticResource MdSysColorOnPrimaryContainer}" 
                               FontSize="36" 
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Hourly Forecast" 
                           Foreground="{StaticResource MdSysColorOnSurface}" 
                           FontSize="16" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl x:Name="ListForecast">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource MdSysColorSurface}" 
                                        CornerRadius="12" 
                                        Padding="15" 
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding TimeLabel}" 
                                                       Foreground="{StaticResource MdSysColorOnSurface}" 
                                                       FontSize="16" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding WeatherDescription}" 
                                                       Foreground="{StaticResource MdSysColorOnSurface}" 
                                                       Opacity="0.7" FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Temperature}" 
                                                       Foreground="{StaticResource MdSysColorOnSurface}" 
                                                       FontSize="20" FontWeight="Bold"/>
                                            <TextBlock Text="°C" 
                                                       Foreground="{StaticResource MdSysColorOnSurface}" 
                                                       FontSize="14" Margin="2,0,0,0" VerticalAlignment="Bottom"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>